<div class="row">
  <div class="col-md-12">
    <h1><%= @wiki.title %></h1>
      <p><%= @wiki.body %></p>
  </div>
</div>
<% if current_user.role == 'admin' || current_user.role == 'premium' %>
<div class="row">
  <div class="col-md-12">
    <%= render partial: 'form', locals: {wiki: @wiki} %>
  </div>
</div>
<% end %>
<hr>
<div class="row">
  <div class="col-md-12">
      <% if policy(@wiki).edit? %>
        <%= link_to "Edit this Wiki", edit_wiki_path(@wiki), class: 'btn btn-warning' %>
      <% end %>
      <% if policy(@wiki).destroy? %>
        <%= link_to "Delete this Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
      <% end %>
      <% if policy(@wiki).create? %>
        <%= link_to "Create a new Wiki", new_wiki_path, class: 'btn btn-success' %>
      <% end %>
      <%= link_to "Wiki Directory", wikis_path, class: 'btn btn-info' %>
  </div>
</div>